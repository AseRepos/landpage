/* Hamburger lines */
.hamburger-line {
  display: block;
  width: 32px;
  height: 3px;
  color: white;
  background-color: black;
  margin-bottom: 2px;
  
  transition: all 0.3s ease-in-out; /* Equivalent to duration-300-ease-in-out */
}

.hamburger-line.top {
  transform-origin: top left; /* Equivalent to origin-top-left */
}

.hamburger-line.middle {
  /* Tidak ada transform-origin untuk garis tengah */
  transition: all 0.3s ease-in-out; /* Sama dengan garis lainnya */
}

.hamburger-line.bottom {
  transform-origin: bottom left; /* Equivalent to origin-bottom-left */
}

